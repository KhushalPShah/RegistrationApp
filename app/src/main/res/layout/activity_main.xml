<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >



<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.android.test_application.MainActivity">

    <ImageView
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:id="@+id/Image_SBMP"
        android:src="@drawable/a1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:id="@+id/Image_SVKM"
        android:src="@drawable/a2"
        android:layout_toRightOf="@+id/Image_SBMP"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="IOT-SEMINAR REGISTRATION FORM"
        android:layout_below="@+id/Image_SBMP"
        android:id="@+id/textView_Title"
        android:textAlignment="center"
        android:textStyle="bold"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER YOUR NAME:"
        android:layout_below="@+id/textView_Title"
        android:id="@+id/textView_name"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_below="@+id/textView_name"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLLEGE NAME: "
        android:id="@+id/textView_college_name"
        android:layout_below="@+id/editText_name"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/editText_college_name"
        android:layout_below="@+id/textView_college_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLLEGE ADDRESS: "
        android:id="@+id/textView_college_address"
        android:layout_below="@+id/editText_college_name"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/editText_college_address"
        android:layout_below="@+id/textView_college_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER: "
        android:id="@+id/textView_phone_number"
        android:layout_below="@+id/editText_college_address"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText_phone_number"
        android:layout_below="@+id/textView_phone_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL-ID: "
        android:id="@+id/textView_email"
        android:layout_below="@+id/editText_phone_number"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_email"
        android:layout_below="@+id/textView_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT and REGISTER"
        android:id="@+id/button"
        android:layout_below="@+id/editText_email"
        android:layout_centerHorizontal="true"
        android:onClick="register"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASTER LOGIN"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:onClick="login"
        android:textStyle="bold"/>


</RelativeLayout>

</ScrollView>